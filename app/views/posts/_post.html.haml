.post-partial
  .card
    .card-body
      .row
        .col-md-2
          =link_to (gravatar_for post.author, size: 55), post.author
        .col-md-10
          %h5.card-title= link_to post.author.name, post.author
          %p.size-80.text-secondary= post.created_at.strftime("on %m/%d/%Y")
      %p.card-text= truncate(post.content, length: max_length)
      = link_to "Show more", post
      .like{id: "post-#{post.id}"}
        = render "likes/button", post: post
        = pluralize(post.likes_count, 'like')
